CREATE TRIGGER TR_ALF_SENHA
BEFORE INSERT ON funcionario
FOR EACH ROW
BEGIN
	DECLARE numLength INT;
	SET numLength = (SELECT CHAR_LENGTH(NEW.SENHA));
	IF ((NEW.SENHA NOT LIKE '%[0-9]%' OR NEW.SENHA NOT LIKE '%[a-zA-Z]%') AND numLength <= 8) THEN
		SET NEW.SENHA = 1/0;
	END IF;
END;;


ALTER TABLE funcionario
ADD CONSTRAINT ALF_SENHA
CHECK ((SENHA LIKE '%[0-9]%') AND (SENHA LIKE '%[a-zA-Z]%') AND (CHAR_LENGTH(SENHA) > 8));
